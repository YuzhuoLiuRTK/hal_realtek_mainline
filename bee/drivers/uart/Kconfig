config REALTEK_BEE_UART
	bool "Realtek Bee MCU uart driver"
	default y
	depends on USE_HAL_REALTEK_BEE_UART

	select USE_HAL_REALTEK_BEE_RCC
	select USE_HAL_REALTEK_BEE_PINMUX
	select USE_HAL_REALTEK_BEE_NVIC

	help
	  This option enables the uart driver for Realtek Bee MCU.
