config REALTEK_BEE_CODEC
	bool "Realtek Bee MCU codec driver"
	default y
	depends on USE_HAL_REALTEK_BEE_CODEC

	select USE_HAL_REALTEK_BEE_RCC
	select USE_HAL_REALTEK_BEE_PINMUX
	select USE_HAL_REALTEK_BEE_NVIC

	help
	  This option enables the codec driver for Realtek Bee MCU.
