config REALTEK_BEE_RTC
	bool "Realtek Bee MCU rtc driver"
	default y
	depends on USE_HAL_REALTEK_BEE_RTC

	select USE_HAL_REALTEK_BEE_RCC
	select USE_HAL_REALTEK_BEE_PINMUX
	select USE_HAL_REALTEK_BEE_NVIC

	help
	  This option enables the rtc driver for Realtek Bee MCU.
